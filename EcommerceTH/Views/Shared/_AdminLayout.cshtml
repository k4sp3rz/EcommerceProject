<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { display: flex; }
        .sidebar { width: 250px; height: 100vh; background: #343a40; color: white; padding-top: 20px; }
        .sidebar a { color: white; padding: 10px; display: block; text-decoration: none; }
        .sidebar a:hover { background: #495057; }
        .content { flex-grow: 1; padding: 20px; }
        .navbar { background: #007bff; color: white; }
    </style>
</head>
@RenderSection("Scripts", required: false)
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <h4 class="text-center"><a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">EcommerceTH</a></h4>
        <a href="@Url.Action("Index", "Dashboard")">Dashboard</a>
        <a href="@Url.Action("Index", "Order")">Orders</a>
        <a href="@Url.Action("Index", "Products")">Products</a>
        <a href="@Url.Action("Index", "Customer")">Users</a>
        <a href="@Url.Action("Logout", "Account")">Logout</a>
    </div>

    <!-- Main Content -->
    <div class="content">
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Admin</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link" href="#">Profile</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Settings</a></li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Dynamic Content -->
        <div class="container mt-4">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
