@model EcommerceTH.data.Customer

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Create Customer</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="NameCus" class="control-label"></label>
        <input asp-for="NameCus" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PhoneCus" class="control-label"></label>
        <input asp-for="PhoneCus" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EmailCus" class="control-label"></label>
        <input asp-for="EmailCus" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label"></label>
        <input asp-for="Password" type="password" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Address" class="control-label"></label>
        <input asp-for="Address" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Point" class="control-label"></label>
        <input asp-for="Point" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Viplevel" class="control-label"></label>
        <input asp-for="Viplevel" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Role" class="control-label"></label>
        <select asp-for="Role" class="form-control" asp-items="ViewBag.RoleList">
            <option value="">-- Select Role --</option>
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<a asp-action="Index">Back to List</a>
